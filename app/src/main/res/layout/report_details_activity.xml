<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="currentReport"
            type="com.rit.matthew.arborlooapp.Model.Report">
        </variable>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_report_details"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:theme="@style/ToolBarStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_name_report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{currentReport.name}"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                />

            <TextView
                android:id="@+id/text_view_info_report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`Info: ` + currentReport.info}"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/text_view_temp_report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`Temperature: ` + currentReport.temperature}"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/text_view_moist_report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`Moisture: ` + currentReport.moisture}"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/text_view_oxy_report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`Oxygen: ` + currentReport.oxygen}"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/text_view_ph_report_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`pH: ` + currentReport.ph}"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

    </LinearLayout>
</layout>