<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rit.matthew.arborlooapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/arborloo_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/arborloo_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.ReportList.ReportListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

        </activity>
        <activity android:name=".View.ReportDetails.Dashboard.DashboardActivity"
            android:screenOrientation="sensor">
        </activity>
        <service
            android:name=".Usb.UsbService"
            android:enabled="true">
        </service>
    </application>

</manifest>